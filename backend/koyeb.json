{
  "name": "pizza-home-backend",
  "type": "web",
  "env": {
    "TZ": "Africa/Cairo",
    "NODE_ENV": "production"
  },
  "build": {
    "commands": [
      "npm install"
    ]
  },
  "run": {
    "command": "node src/server.js"
  },
  "healthcheck": {
    "path": "/api/health",
    "port": 8000
  },
  "scaling": {
    "min": 1,
    "max": 3
  }
}
